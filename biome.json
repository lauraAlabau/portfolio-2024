{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["src/**/*.ts", "*.ts", "*.tsx"],
    "ignore": ["dist", "vitest.config.ts"]
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },

      "correctness": {
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "error",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error"
      }
    }
  }
}
