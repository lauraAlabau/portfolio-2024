{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "includes": [
      "**/src/**/*.ts",
      "**/*.ts",
      "**/*.tsx",
      "!!**/dist",
      "!!**/node_modules",
      "!!**/vitest.config.ts",
      "!!**/*.json",
      "!!**/*.js",
      "!!**/*.css"
    ]
  },

  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noStaticElementInteractions": "off"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },

      "correctness": {
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "error",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error"
      }
    }
  }
}
